<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with white color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="8dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
    <!-- Black shadow -->
    <item android:bottom="3dp" android:right="2dp"> <!-- Adjust shadow offset as needed -->
        <shape android:shape="rectangle">
            <solid android:color="#40000000" /> <!-- Adjust shadow color and opacity as needed -->
            <corners android:radius="8dp" /> <!-- Match corner radius with background -->
        </shape>
    </item>
</layer-list>