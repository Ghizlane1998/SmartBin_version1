<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:background="@drawable/shadow_background"
    android:backgroundTint="@color/white"
    android:elevation="8dp"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginHorizontal="10dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/one_project"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            >

            <TextView
                android:id="@+id/project_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:text="project title"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/project_description_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/project_title_text_view"
                android:layout_marginVertical="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="this can be task description that can be long"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/task_timestamp_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/project_description_text_view"
                android:layout_alignParentStart="true"
                android:layout_marginVertical="4dp"
                android:layout_marginStart="0dp"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="2"
                android:text="Created at "
                android:textSize="12sp" />

        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>